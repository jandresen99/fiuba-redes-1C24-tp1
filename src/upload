from lib.utils import set_logger
from lib.utils import get_upload_args
from lib.client import Client
from lib.values import *

def main():
    try:
        args = get_upload_args()
        logger = set_logger(args, __name__)
        client = Client(args.host, args.port, UPLOAD_TYPE, logger, DESTINATION_LOCATION)
        client.start()
        client.upload(args.src, args.name)
        
    except KeyboardInterrupt:
        print("\nClosing client...")
    
if __name__ == "__main__":
    main()
